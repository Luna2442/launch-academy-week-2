<% require 'pry' %>


<body>
  <h1>
    Recipe Title: <%= @name %>
  </h1>

  <ul>
    <% @ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>

  <ol>
    <% @directions.each do |direction| %>
      <li><%= direction %></li>
    <% end %>
  </ol>

  <p>
    <% @reviews.each do |review| %>
      <%= review[:username] %><br>
      <%= review[:rating] %><br>
      <%= review[:review] %><br><br>
    <% end %>
  </p>


</body>
